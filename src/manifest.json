{
  "manifest_version": 2,
  "name": "New Tab HTML",
  "short_name": "New Tab HTML",
  "description": "Customize the contents of your new tab page with HTML.",
  "version": "1.0.0",
  "icons": {
    "16": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "homepage_url": "https://github.com/kmgb/simple-new-tab-url",
  "minimum_chrome_version": "26.0.1428",
  "options_ui": {
    "page": "options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "newtabhtml@kmgb.github.io"
    }
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "storage",
    "chrome://favicon/"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; img-src chrome://favicon data:;"
}
